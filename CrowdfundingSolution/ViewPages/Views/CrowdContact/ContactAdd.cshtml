@using ViewPages.Models
@model CrowdContactModels

@{
    ViewBag.Title = "联系方式";
}

<div class="row">
    <div class="col-md-8">
        <section id="ContentForm">
            @using (Html.BeginForm("ContactAdd", "CrowdContact", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <h4>联系方式</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.BasicID, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input type="text" value="@ViewBag.ProjectName" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.QQ, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m =>m.QQ, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.QQ, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNum, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PhoneNum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Qqun, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Qqun, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Qqun, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Wqun, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Wqun, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Wqun, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="取消" />
                        <input type="submit" value="下一步" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
